{
  "name": "MMM 1.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "libs/*"
  ],
  "scripts": {
    "dev:frontend": "npm run dev --workspace=frontend",
    "dev:backend": "npm run start:dev --workspace=backend",
    "dev:electron": "npm start --workspace=electron",
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\" \"npm run dev:electron\"",
    "prisma:generate": "prisma generate --schema=apps/backend/prisma/schema.prisma",
    "prisma:migrate": "prisma migrate dev --schema=apps/backend/prisma/schema.prisma"
  },
  "dependencies": {
    "@prisma/client": "^5.22.0"
  },
  "devDependencies": {
    "concurrently": "^9.0.0",
    "prisma": "^5.0.0"
  }
}
